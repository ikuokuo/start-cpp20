{
    // Add IntelliSense for C++20 modules importing #6302
    //  https://github.com/microsoft/vscode-cpptools/issues/6302
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [],
            "compilerPath": "/usr/local/llvm/bin/clang",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-clang-x64",
            "compilerArgs": [
                "-std=c++20",
                "-stdlib=libc++",
                "-fmodules",
                "-fno-implicit-modules",
                "-fbuiltin-module-map"
            ]
        }
    ],
    "version": 4
}